<header>

    <h1>Codeial</h1>

    <ul>
        <% if(locals.user){ %>
            <li>
                <a href="/users/profile/<%=locals.user._id%>">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/signout">Sign out</a>
            </li>
        <% }else{ %>

            <li>
                <a href="/users/signin">Sign in</a>
            </li>

            <li>
                <a href="/users/signup">Sign up</a>
            </li>
            <% } %>
    </ul>

</header>